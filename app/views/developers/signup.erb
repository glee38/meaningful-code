<% if @dev.errors.any? %>
  <div id="error_explanation">
    User could not be created because of the following errors:
    <ul>
    <% @dev.errors.full_messages.each do |msg|%>
      <% unless msg.include?("digest") %>
      <li><%= msg %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
<% end %>

<h3>Sign Up</h3>
<form action="/developers/signup" method="POST">
  <input type="text" name="name" placeholder="First Name:"><br></br>
  <input type="email" name="email" placeholder="E-mail:"><br></br>
  <input type="url" name="github" placeholder="GitHub URL:"><br></br>
  <input type="text" name="username" placeholder="Username:"><br></br>
  <input type="password" name="password" placeholder="Password:"><br></br>
  <textarea name="about_me" placeholder="Tell us a little about yourself." id="" cols="30" rows="10"></textarea><br></br>
  <input type="submit" value="Sign Up">
</form>