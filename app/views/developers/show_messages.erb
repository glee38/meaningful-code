<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1><%=current_dev.name%>'s Messages</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th></th>
      <th>To/From</th>
      <th>Subject</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>

<%@m_sorted = current_dev.messages.order('id DESC')%>
<%@m_sorted.each_with_index do |m,i|%>
<tr>

  <td><%=i+1%></td>
  <td><a href="/developers/<%=current_dev.slug%>/messages/<%=m.id%>"><%= m.nonprofit.name%></a></td>
  <td><%= m.subject%></td>
  <td><%= m.date%></td>
</tr>
<%end%>
  </tbody>
</table> 