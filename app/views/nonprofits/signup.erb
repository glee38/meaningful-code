<% if @np.errors.any? %>
  <div id="error_explanation">
    User could not be created because of the following errors:
    <ul>
    <% @np.errors.full_messages.each do |msg|%>
      <% unless msg.include?("digest") %>
      <li><%= msg %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
<% end %>

<h3>Sign Up</h3><br>
<form action="/nonprofits/signup" method="POST">
  <input type="text" name="name" placeholder="Organization Name"><br></br>
  <input type="email" name="email" placeholder="E-mail"><br></br>
  <input type="url" name="website" placeholder="Website URL"><br></br>
  <input type="text" name="username" placeholder="Username"><br></br>
  <input type="password" name="password" placeholder="Password"><br></br>
  <textarea name="tagline" id="" cols="30" rows="3" placeholder="Tagline"></textarea><br></br>
  <textarea name="cause" id="" cols="30" rows="10" placeholder="Your Cause"></textarea><br></br>
  <input type="submit" value="Sign Up"><br></br>
</form>